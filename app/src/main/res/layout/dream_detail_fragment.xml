<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="18dp">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dream_title_label"/>

    <EditText
        android:id="@+id/dream_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dream_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/dream_realized"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dream_realized"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <CheckBox
            android:id="@+id/dream_deferred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dream_deferred"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dream_details_label"/>
    <Button
        android:id="@+id/dream_entry_0_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dream_entry_0_button"/>
    <Button
        android:id="@+id/dream_entry_1_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dream_entry_1_button"/>
    <Button
        android:id="@+id/dream_entry_2_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dream_entry_2_button"/>
    <Button
        android:id="@+id/dream_entry_3_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dream_entry_3_button"/>
    <Button
        android:id="@+id/dream_entry_4_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dream_entry_4_button"/>


</LinearLayout>